{
  "compilerOptions": {
    "target": "es2019",
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "declaration": true,
    "newLine": "LF",
    "strict": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "./dist/full"
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
